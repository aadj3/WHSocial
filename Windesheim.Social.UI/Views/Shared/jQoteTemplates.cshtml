        <a class="deleteMessage" id="deleteMessage_<%=this.Id %>" href="javascript:;"><img height="15px" src="/Content/Images/delete.ico"></img></a>
        <div class="messageValue">
            <%=this.Value %>    
        </div>
    </div>
]]>
</script>